<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Usamos NoActionBar para quitar la barra morada de arriba y usar nuestro propio diseño -->
    <style name="Theme.LuxInteligent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Color Primario (Azul del botón conectar) -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Color Secundario (Tonos claros del fondo) -->
        <item name="colorSecondary">#E0F7FA</item>
        <item name="colorSecondaryVariant">#B2EBF2</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Color de la barra de estado (la de la batería/hora) -->
        <item name="android:statusBarColor">#E3F2FD</item>
        <!-- Hacemos los iconos de la barra de estado oscuros para que se vean sobre fondo claro -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>